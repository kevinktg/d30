    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('.content-section');

            navLinks.forEach(link => {
                link.addEventListener('click', e => {
                    e.preventDefault();
                    const sectionId = link.getAttribute('data-section');

                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');

                    sections.forEach(s => {
                        s.classList.remove('active');
                        if (s.id === sectionId) {
                            s.classList.add('active');
                        }
                    });
                     window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            });

            const techButtons = document.querySelectorAll('.tech-button');
            const techTitle = document.getElementById('tech-title');
            const techDescription = document.getElementById('tech-description');
            let techChart;

            const techData = {
                lp2: {
                    title: 'D3O® LP2 Pro',
                    description: "The pinnacle of D3O's protection, certified to the highest CE Level 2 standard. Engineered for catchers facing elite velocity, its 15mm profile offers unparalleled impact attenuation to prevent long-term injury. TriVent technology ensures breathability during peak performance.",
                    values: [10, 3] 
                },
                lp1: {
                    title: 'D3O® LP1',
                    description: "The balanced performance option, certified to CE Level 1. At 11mm thick, it offers protection far superior to traditional foams in a thinner, more agile package that appeals to catchers who prioritize feel and hand speed without significant compromise.",
                    values: [7, 6]
                },
                ghost: {
                    title: 'D3O Ghost™',
                    description: "The most revolutionary form factor at just 6.5mm thick. It utilizes 'Impact Print™' technology for an incredibly thin, flexible design. It provides CE Level 1 protection for players who demand the ultimate 'fit and forget' feel and freedom of movement.",
                    values: [5, 10]
                }
            };

            function createTechChart(data) {
                const ctx = document.getElementById('techChart').getContext('2d');
                if (techChart) {
                    techChart.destroy();
                }
                techChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Impact Protection', 'Flexibility / Feel'],
                        datasets: [{
                            label: 'Performance Rating',
                            data: data,
                            backgroundColor: ['#F97316', '#FB923C'],
                            borderColor: ['#EA580C', '#F97316'],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                beginAtZero: true,
                                max: 10,
                                grid: { display: false }
                            },
                            y: {
                                grid: { display: false }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: { enabled: false }
                        }
                    }
                });
            }

            techButtons.forEach(button => {
                button.addEventListener('click', () => {
                    techButtons.forEach(btn => {
                        btn.classList.remove('bg-orange-500', 'text-white');
                        btn.classList.add('bg-stone-200', 'text-stone-700');
                    });
                    button.classList.add('bg-orange-500', 'text-white');
                    button.classList.remove('bg-stone-200', 'text-stone-700');
                    
                    const techId = button.id.split('-')[1];
                    techTitle.textContent = techData[techId].title;
                    techDescription.textContent = techData[techId].description;
                    createTechChart(techData[techId].values);
                });
            });

            createTechChart(techData.lp2.values);

            const competitorButtons = document.querySelectorAll('.competitor-button');
            const competitorTitle = document.getElementById('competitor-title');
            const competitorDescription = document.getElementById('competitor-description');
            let competitorChart;
            
            const competitorData = {
                d3o: [9, 9, 8, 10, 7],
                rawlings: {
                    name: 'vs. Rawlings (PORON XRD)',
                    description: "Rawlings uses PORON XRD, a high-quality polyurethane foam. While effective at energy absorption, its performance is fixed and not adaptive to impact velocity. It is also susceptible to compression set over time, degrading protection. D3O's non-Newtonian technology provides a life-of-product advantage with superior, rate-sensitive protection.",
                    values: [7, 5, 6, 4, 8]
                },
                wilson: {
                    name: 'vs. Wilson (Double Palm)',
                    description: "Wilson prioritizes pocket stability and 'feel' with a structural leather reinforcement. This offers only indirect impact absorption, creating a significant vulnerability against D3O's dedicated, advanced material science focused on primary energy dissipation.",
                    values: [5, 4, 8, 5, 9]
                },
                allstar: {
                    name: 'vs. All-Star (Pro Guard Padding)',
                    description: "All-Star uses a proprietary multi-density foam composite. Like other conventional foams, it lacks the adaptive, rate-sensitive properties of D3O, providing a fixed level of protection that is less efficient at handling the variable impact forces of elite-level play.",
                    values: [6, 5, 6, 3, 8]
                },
                mizuno: {
                    name: 'vs. Mizuno (ParaShock Pad)',
                    description: "Mizuno's foam pad explicitly targets rebound reduction. However, its damping mechanism is less efficient than D3O's molecular energy dissipation, which has a scientifically validated higher dampening ratio for a superior 'deaden-ball' effect.",
                    values: [6, 6, 7, 5, 7]
                }
            };

            function createCompetitorChart(data) {
                const ctx = document.getElementById('competitorChart').getContext('2d');
                if (competitorChart) {
                    competitorChart.destroy();
                }
                competitorChart = new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: ['Impact Absorption', 'Dampening', 'Lightweight', 'Game-Ready', 'Durability'],
                        datasets: [
                            {
                                label: 'D3O',
                                data: competitorData.d3o,
                                backgroundColor: 'rgba(249, 115, 22, 0.2)',
                                borderColor: '#F97316',
                                pointBackgroundColor: '#F97316'
                            },
                            {
                                label: data.name.split(' ')[1],
                                data: data.values,
                                backgroundColor: 'rgba(120, 113, 108, 0.2)',
                                borderColor: '#78716C',
                                pointBackgroundColor: '#78716C'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            r: {
                                beginAtZero: true,
                                max: 10,
                                pointLabels: { font: { size: 10 } },
                                ticks: { display: false }
                            }
                        },
                        plugins: {
                            legend: { position: 'top' }
                        }
                    }
                });
            }
            
            competitorButtons.forEach(button => {
                button.addEventListener('click', () => {
                    competitorButtons.forEach(btn => {
                        btn.classList.remove('bg-orange-500', 'text-white');
                        btn.classList.add('bg-stone-200', 'text-stone-700');
                    });
                    button.classList.add('bg-orange-500', 'text-white');
                    button.classList.remove('bg-stone-200', 'text-stone-700');
                    
                    const competitorId = button.dataset.competitor;
                    const data = competitorData[competitorId];
                    competitorTitle.textContent = data.name;
                    competitorDescription.textContent = data.description;
                    createCompetitorChart(data);
                });
            });

            createCompetitorChart(competitorData.rawlings);

            const triangleContainer = document.getElementById('triangle');
            triangleContainer.addEventListener('click', () => {
                triangleContainer.classList.toggle('solved');
            });

            const triangleCanvas = document.getElementById('triangle-canvas').getContext('2d');
            function drawTriangle() {
                const canvas = triangleCanvas.canvas;
                const w = canvas.width;
                const h = canvas.height;
                triangleCanvas.strokeStyle = '#D6D3D1'; // stone-300
                triangleCanvas.lineWidth = 2;
                triangleCanvas.beginPath();
                triangleCanvas.moveTo(w / 2, 20);
                triangleCanvas.lineTo(20, h - 20);
                triangleCanvas.lineTo(w - 20, h - 20);
                triangleCanvas.closePath();
                triangleCanvas.stroke();
            }
            drawTriangle();

            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');
            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const tabId = button.dataset.tab;
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    tabContents.forEach(content => {
                        content.classList.remove('active');
                        if(content.id === tabId) {
                            content.classList.add('active');
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>
